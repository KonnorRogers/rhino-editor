<%= link_to "Posts", posts_path %>

    <style>
      .rhino-editor::part(editor) {
        max-height: 400px;
        overflow: auto;
      }
    </style>

<h2>TipTap Editor</h2>
<form>
  <input id="y" type="hidden" name="content">
  <rhino-editor
    input="y"
    alt-text-editor
    data-blob-url-template="<%= rails_service_blob_path(":signed_id", ":filename") %>"
    data-direct-upload-url="<%= rails_direct_uploads_url %>"
  >
  </rhino-editor>
</form>

<br><br>
<h2>Trix Editor</h2>
<form>
  <input id="x" type="hidden" name="content">
  <trix-editor
    input="x"
    class="trix-content"
    data-blob-url-template="<%= rails_service_blob_path(":signed_id", ":filename") %>"
    data-direct-upload-url="<%= rails_direct_uploads_url %>"
  >
  </trix-editor>
</form>

<div>
  Mirrored TipTap HTML:
  <br>
  <pre style="max-width: 80ch;">
    <code id="tip-tap-mirrored-html" class="language-html">
    </code>
  </pre>
</div>

<div>
  Mirrored Trix HTML:
  <br>
  <pre style="max-width: 80ch;">
    <code id="trix-mirrored-html" class="language-html">
    </code>
  </pre>
</div>
